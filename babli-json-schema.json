{
  "$ref": "#/definitions/babli.json schema",
  "definitions": {
    "babli.json schema": {
      "type": "object",
      "properties": {
        "projectId": {
          "type": "string"
        },
        "sortBy": {
          "type": "string",
          "enum": [
            "key",
            "value",
            "original"
          ],
          "default": "original"
        },
        "defaultFilePattern": {
          "type": "string"
        },
        "translationFiles": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "languages": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "pattern"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "language": {
                    "type": "string"
                  }
                },
                "required": [
                  "path",
                  "language"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "fileFormat": {
          "type": "string",
          "enum": [
            "json",
            "json-nested",
            "flutterArb",
            "typescript",
            "yaml-nested"
          ]
        },
        "fileOptions": {
          "type": "object",
          "properties": {
            "topLevelLanguageCode": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "defaultFile": {
          "type": "string"
        },
        "host": {
          "type": "string",
          "default": "https://www.babli.ai"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "projectId",
        "translationFiles",
        "$schema"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}